<%- include('../partials/base') %>

<h2>Enter a New Flight</h2>
<form action="/flights" method="POST">
<label>Airline:
    <select name="airline">
        <option value="AA">American</option>
        <option value="UA">United</option>
        <option value="SW">Southwest</option>
    </select>
    </label><br>
    <label>Airport:
    <select name="airport">
        <option value="DEN" selected="selected">Denver</option>
        <option value="ATX">Austin</option>
        <option value="BOS">Boston</option>
        <option value="PVD">Providence</option>
    </select>
    </label><br>
<label>Flight Number:
    <input type="number" name="flightNo" min="10" max="9999">
</label><br>
<label>Departure Date:
    <input type="datetime-local" name="departs" value="nextYear">
</label><br>
<input type="submit" value="Add Flight">
</form>

<%- include('../partials/footer') %>
