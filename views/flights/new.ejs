<%- include('../partials/base') %>

<h2>Enter a New Flight</h2><br>
<form action="/flights" method="POST">
<label>Airline:
    <select name="airline">
        <option value="American">American</option>
        <option value="United">United</option>
        <option value="Southwest">Southwest</option>
    </select>
    </label><br><br>
    <label>Airport:
    <select name="airport">
        <option value="AUS">ATX</option>
        <option value="DFW">DFW</option>
        <option value="DEN" selected="selected">DEN</option>
        <option value="LAX">LAX</option>
        <option value="SAN">SAN</option>
    </select>
    </label><br><br>
<label>Flight Number:
    <input type="number" name="flightNo" min="10" max="9999">
</label><br><br>
<label>Departure Date:
    <input type="datetime-local" name="departs" value="defaultDate">
</label><br><br>
<input type="submit" class="btn btn-warning " value="Add Flight">
</form>

<%- include('../partials/footer') %>
